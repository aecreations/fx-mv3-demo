{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "description": "__MSG_extDesc__",
  "version": "1.0.1",
  "author": "AE Creations",

  "browser_specific_settings": {
    "gecko": {
      "id": "hello-mv3@aecreations.github.io",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "icons": {
    "48": "img/icon.png",
    "96": "img/icon.png"
  },

  "permissions": [
    "activeTab",
    "menus",
    "notifications",
    "scripting",
    "storage"
  ],

  "optional_permissions": [
    "browserSettings",
    "sessions",
    "tabs"
  ],
  
  "background": {
    "scripts": [
      "scripts/aePrefs.js",
      "scripts/aeSyncedPrefs.js",
      "background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content-style.css"]
    }
  ],

  "action": {
    "default_icon": "img/icon.png",
    "default_title": "__MSG_extName__"
  },

  "options_ui": {
    "page": "pages/options.html",
    "open_in_tab": true,
    "browser_style": true
  },

  "commands": {
    "open-hello-window": {
      "suggested_key": {
        "default": "Ctrl+Shift+F1"
      },
      "description": "__MSG_openWindowCmd__"
    }
  },

  "default_locale": "en"
}
