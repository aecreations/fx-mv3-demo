{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "description": "__MSG_extDesc__",
  "version": "1.0",
  "author": "AE Creations",

  "browser_specific_settings": {
    "gecko": {
      "id": "hello-mv3@aecreations.github.io",
      "strict_min_version": "109.0"
    }
  },

  "icons": {
    "48": "img/icon.png",
    "96": "img/icon.png"
  },

  "permissions": [
    "menus",
    "notifications",
    "storage"
  ],
  
  "background": {
    "scripts": [
      "scripts/aePrefs.js",
      "background.js"
    ]
  },

  "action": {
    "default_icon": "img/icon.png",
    "default_title": "__MSG_extName__"
  },

  "options_ui": {
    "page": "pages/options.html",
    "open_in_tab": true,
    "browser_style": true
  },

  "default_locale": "en"
}
